<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_load_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showLoadFailed"
        android:text="load failed" />

    <Button
        android:id="@+id/btn_load_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showLoadEmpty"
        android:text="load empty" />

    <Button
        android:id="@+id/btn_load_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showLoadSuccess"
        android:text="load success" />

</LinearLayout>